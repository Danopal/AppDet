<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutSeleccionImagen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="445dp"
        android:layout_height="94dp"
        android:background="#7d1662"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/logo"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_marginStart="50sp"
            android:src="@drawable/bug" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:text="DetSmish"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="50sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textoInstruccion"
        android:layout_width="301dp"
        android:layout_height="129dp"
        android:layout_marginTop="260dp"
        android:text="Inserta la captura de pantalla del mensaje sospechoso"
        android:textSize="30sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        android:textStyle="bold"/>

    <Button
        android:id="@+id/botonCargarImagen"
        android:layout_width="255dp"
        android:layout_height="141dp"
        android:backgroundTint="#7d1662"
        android:text="SELECCIONAR IMÃGEN"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textoInstruccion" />


</androidx.constraintlayout.widget.ConstraintLayout>
